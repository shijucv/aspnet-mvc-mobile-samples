<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title> 
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="@Url.Content("~/Content/jquery.mobile-1.0rc2.min.css")" />
        <link rel="stylesheet" href="@Url.Content("~/Content/Site.Mobile.css")" />
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")"></script>
        <script type="text/javascript">
            $(document).bind("mobileinit", function() {
                // As of Beta 2, jQuery Mobile's Ajax navigation does not work in all cases (e.g.,
                // when navigating from a mobile to a non-mobile page), hence disabling it.
                $.mobile.ajaxEnabled = false;
            });
        </script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.mobile-1.0rc2.min.js")"></script>
    </head> 
<body> 

    <div data-role="page" data-theme="d">
        @Html.Partial("_ViewSwitcher")

        <div data-role="header">
            patterns & practices
        </div>

        <div data-role="content">
            <h1>@ViewBag.Title</h1>
            @RenderSection("featured", false)
            @RenderBody()
            <div class="pp_logo">
                <img src="@Url.Content("~/images/pnp_logo.png")" alt="patterns & practices" />
            </div>
        </div>

        <div data-role="footer">
            <p>&copy; @DateTime.Now.Year - Microsoft patterns & practices</p>
        </div>
    </div>

</body>
</html>
